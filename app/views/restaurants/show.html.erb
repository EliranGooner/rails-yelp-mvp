<h1><%= @restaurant.name %></h1>
<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>
<p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li>content: <%= review.content %> rating: <%= review.rating  %></li>
  <% end %>
</ul>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to 'Back to restaurants', restaurants_path, class: "btn btn-primary" %>
